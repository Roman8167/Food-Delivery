<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta http-equiv="X-UA-Compatible" content="ie=edge">
    <link rel="stylesheet" href="https://bootswatch.com/4/pulse/bootstrap.css">
    <link href="https://fonts.googleapis.com/icon?family=Material+Icons" rel="stylesheet">
    <title>Admin</title>
</head>
<body>
<div class="container">
<img src="./images/undraw_Browser_stats_av6t.png" class="img-fluid" width="40%">
<h3 class="text-center">Admin</h3>
</div>
<div class="container">
<table class="table">
<thead>
<tr>
    <th scope="col">Name</th>
    <th scope="col">Email</th>
    <th scope="col">Address</th>
    <th scope="col">Telephone</th>
    <th scope="col">City</th>
    <th scope="col">Food Package</th>
    <th scope="col">SubTotal</th>
    <th scope="col">Total Orders</th>
</tr>
</thead>
<%foods.forEach(function(item){%>
<tbody>
<tr>
<td><%=item.name%></td>
<td><%=item.email%></td>
<td><%=item.address%></td>
<td><%=item.telephone%></td>
<td><%=item.city%></td>
<td><%=item.product%></td>
<td>$<%=item.subtotal%></td>
<td><%=item.totalQuantity%></td>
<td><a href="/adminPage/<%=item._id%>" role="button" class="btn-danger btn block">Remove</a></td>
</tr>
</tbody>
<%})%>
</table>
</div>
<script src="https://code.jquery.com/jquery-3.5.1.slim.min.js" integrity="sha384-DfXdz2htPH0lsSSs5nCTpuj/zy4C+OGpamoFVy38MVBnE+IbbVYUew+OrCXaRkfj" crossorigin="anonymous"></script>
<script src="https://cdn.jsdelivr.net/npm/popper.js@1.16.0/dist/umd/popper.min.js" integrity="sha384-Q6E9RHvbIyZFJoft+2mJbHaEWldlvI9IOYy5n3zV9zzTtmI3UksdQRVvoxMfooAo" crossorigin="anonymous"></script>
<script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.0/js/bootstrap.min.js" integrity="sha384-OgVRvuATP1z7JjHLkuOU7Xw704+h835Lr+6QL9UvYjZE3Ipu6Tp75j7Bh/kR0JKI" crossorigin="anonymous"></script>    
</body>
</html>