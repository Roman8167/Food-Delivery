<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta http-equiv="X-UA-Compatible" content="ie=edge">
    <link rel="stylesheet" href="https://bootswatch.com/4/pulse/bootstrap.css">
    <link href="https://fonts.googleapis.com/icon?family=Material+Icons" rel="stylesheet">
    <title>Add-To-Cart</title>
</head>
<body>
<div class="container">
<a href="/homepage" role="button" class="btn-primary btn block">Shop</a>
<%if(foods){%>
<table class="table">
<thead>
<tr>
    <th>Food</th>
    <th>Price</th>
    <th>Quantity</th>
</tr>
</thead>
<%foods.forEach(function(food){%>
<tbody>
<tr>
<td><%=food.productName%></td>
<td>$<%=food.price%></td>
<td><a href="/increase/<%=food._id%>" role="button" class="btn-primary btn block">+</a></td><td><%=food.qty%></td><td></td><td><a href="/reduce/<%=food._id%>" role="button" class="btn-primary btn block">-</a></td>
</tr>
</tbody>
<%})%>
</table>
<p>Total-Price</p><p>$<%=totalPrice%></p>
<p>Total-Quantity</p><p><%=totalQty%></p>
<a href="/deleteAll" role="button" class="btn-danger btn block">Delete Entire Cart</a>
<div class="text-center">
<a href="/checkout" role="button" class="btn-info btn block">Checkout</a>
</div>
<%} else {%>
<br>
<div class="alert alert-danger alert-dismissible fade show" role="alert">
<p>The Cart is Empty!</p>
<button type="button" class="close" data-dismiss="alert" aria-label="Close">
<span aria-hidden="true">&times;</span>
</button>
<%}%>
</div>
<script src="https://code.jquery.com/jquery-3.4.1.slim.min.js" integrity="sha384-J6qa4849blE2+poT4WnyKhv5vZF5SrPo0iEjwBvKU7imGFAV0wwj1yYfoRSJoZ+n" crossorigin="anonymous"></script>
<script src="https://cdn.jsdelivr.net/npm/popper.js@1.16.0/dist/umd/popper.min.js" integrity="sha384-Q6E9RHvbIyZFJoft+2mJbHaEWldlvI9IOYy5n3zV9zzTtmI3UksdQRVvoxMfooAo" crossorigin="anonymous"></script>
<script src="https://stackpath.bootstrapcdn.com/bootstrap/4.4.1/js/bootstrap.min.js" integrity="sha384-wfSDF2E50Y2D1uUdj0O3uMBJnjuUD4Ih7YwaYd1iqfktj0Uod8GCExl3Og8ifwB6" crossorigin="anonymous"></script>    
</body>
</html>